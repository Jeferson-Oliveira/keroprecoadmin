<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="keroprecoadmin.controllers.CadastroPrecosFXMLController">
    <children>
      <MenuBar layoutX="30.0" layoutY="14.0" prefHeight="51.0" prefWidth="600.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <menus>
            <Menu mnemonicParsing="false" text="Home">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#irParaHome" text="Home" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Usuarios">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#irParaListarUsuarios" text="Listar" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Produtos">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#irParaListarProdutos" text="Listar" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Supermercados">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#irParaListarSupermercados" text="Listar" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Preços">
              <items>
                <MenuItem mnemonicParsing="false" text="Cadastrar" />
                  <MenuItem mnemonicParsing="false" text="Alterar" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
      <ComboBox fx:id="cbSupermercados" layoutX="14.0" layoutY="96.0" onAction="#carregarProdutosSupermercado" prefHeight="25.0" prefWidth="135.0" promptText="Supermercado" />
      <ComboBox fx:id="cbProdutos" layoutX="14.0" layoutY="140.0" onAction="#obterDadosProduto" prefHeight="25.0" prefWidth="135.0" promptText="Produtos" />
      <TextField fx:id="txPreco" layoutX="165.0" layoutY="140.0" prefHeight="25.0" prefWidth="67.0" promptText="Preço" />
      <Button layoutX="14.0" layoutY="188.0" mnemonicParsing="false" onAction="#cadastrarPreco" text="Adicionar" />
      <Button layoutX="92.0" layoutY="188.0" mnemonicParsing="false" onAction="#removerPreco" text="Remover" />
      <TableView fx:id="tbProdutosSupermercados" layoutX="310.0" layoutY="51.0" prefHeight="348.0" prefWidth="292.0" />
      <Label layoutY="51.0" prefHeight="35.0" prefWidth="311.0" text="Cadastro de Preços">
         <font>
            <Font size="24.0" />
         </font>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </Label>
    </children>
</AnchorPane>
